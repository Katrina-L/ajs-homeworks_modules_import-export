{
    "env": {
        "es2021": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-restricted-syntax": [
            "error",
            "LabeledStatement",
            "WithStatement"
        ],
        "quotes": [
            "error", 
            "double"
        ],
        "linebreak-style": [
            "error",
            "CRLF"
        ]
    }
}
